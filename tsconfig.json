{
    "typeAcquisition": {
      "include": ["jest"]
    },
    "compilerOptions": {
      "target": "ES2023",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "baseUrl": ".",
      "rootDir": "src/",
      "outDir": "dist/",
      "paths": {
        "@/*": ["./src/*"]
      },
      "declaration": true,
      "declarationMap": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "ts-node": {
      "files": true
    },
    "include": ["src/types/*.d.ts", "src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/__tests__/**", "dist"]
}
